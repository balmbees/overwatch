{
  "title": "Component",
  "type": "object",
  "required": [
    "name",
    "description",
    "infrastructureType"
  ],
  "properties": {
    "name": {
      "type": "string",
      "title": "Name",
      "description": "name of the component"
    },
    "description": {
      "type": "string",
      "title": "Description",
      "description": "description of the component"
    },
    "infrastructureType": {
      "type": "string",
      "title": "Infrastructure Type",
      "description": "Infrastructure Type of the component",
      "enum": [
        "Custom",
        "AWS-S3",
        "AWS-ApiGateway",
        "AWS-CloudSearch",
        "AWS-DynamoDB",
        "AWS-Lambda",
        "AWS-CloudFront",
        "AWS-RDS",
        "AWS-ELB",
        "AWS-Opsworks",
        "AWS-EMRCluster",
        "AWS-KinesisFirehose",
        "AWS-KinesisStream",
        "AWS-KinesisAnalytics"
      ]
    },
    "status": {
      "type": "string",
      "title": "Status",
      "description": "Summarized status of component"
    }
  }
}
